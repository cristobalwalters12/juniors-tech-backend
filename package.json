{
  "name": "juniors-tech-backend",
  "version": "1.0.0",
  "description": "API REST para el foro Juniors.tech - Proyecto final del programa FullStack con JavaScript de la Academia Desafío Latam",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "dev:win": "cross-env NODE_ENV=development nodemon src/server.js",
    "test": "NODE_ENV=test jest --verbose --coverage --forceExit --detectOpenHandles",
    "test:win": "cross-env NODE_ENV=test jest --verbose --coverage --forceExit --detectOpenHandles",
    "start": "node src/server.js",
    "lint": "eslint . --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npx eslint . --fix",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Ayxa Chaverra R., Cristóbal Walters, Jonathan Araos, Nicolás Contreras",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.1.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "logger-express": "^1.1.0",
    "nanoid": "^5.0.6",
    "pg": "^8.11.4",
    "pg-format": "^1.0.4",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest/globals": true
    },
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {},
    "plugins": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.{js, ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
